# IRS IDMS UI - Environment Configuration
# Copy this file to .env.local for local development

# Backend API URLs
# For local development, use localhost
# For GCP sandbox, use the Cloud Run URLs
# For Treasury Cloud, update to internal URLs
#
# Note: CI/CD pipeline uses VITE_API_URL (see deploy.yml)
# Both variable names are supported for flexibility
VITE_API_URL=https://irs-backend-5b63suhb3a-uc.a.run.app
VITE_ADK_URL=https://irs-adk-5b63suhb3a-uc.a.run.app

# Feature Flags
VITE_ENABLE_AI_ANSWERS=true
VITE_ENABLE_DOCUMENT_CHAT=true
VITE_ENABLE_SSE_STREAMING=true

# Debug Mode (enables console logging)
VITE_DEBUG_MODE=false

# Figma MCP Integration (Optional)
# Browser-based OAuth is used by default - see docs/FIGMA_SETUP.md
# Only set this if you need to use a Personal Access Token instead
# FIGMA_ACCESS_TOKEN=your_figma_token_here
